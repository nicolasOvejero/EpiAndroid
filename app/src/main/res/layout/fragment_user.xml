<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeviceFragment"
    android:weightSum="1"
    android:id="@+id/perso">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/general">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Title"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp" />

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/profilImage"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_rowSpan="5"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/tagImage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/login"
                android:id="@+id/loginLabel"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/loginText"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/semester"
                android:id="@+id/semestreLabel"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/semestreText"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/promo"
                android:id="@+id/promoLabel"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/promoText"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/activeLog"
                android:id="@+id/logTimeLabel"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/logTimeText"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/city"
                android:id="@+id/cityLabel"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/cityText"
                android:layout_row="5"
                android:layout_column="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/projectPres"
                android:id="@+id/project"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_columnSpan="3"
                android:background="#fde799"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="38dp"
                android:paddingTop="10dp"
                android:paddingRight="38dp"
                android:paddingBottom="10dp" />

            <ovejero_nicolas.epiandroid.NonScrollListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listProject"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:dividerHeight="2.0sp"
                android:divider="#0505b7">
            </ovejero_nicolas.epiandroid.NonScrollListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/modulePres"
                android:id="@+id/modules"
                android:layout_row="8"
                android:layout_column="0"
                android:background="#fde799"
                android:layout_gravity="center"
                android:layout_columnSpan="3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <ovejero_nicolas.epiandroid.NonScrollListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listNote"
                android:layout_row="9"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:dividerHeight="2.0sp"
                android:fastScrollEnabled="false"
                android:divider="#0505b7">
            </ovejero_nicolas.epiandroid.NonScrollListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/history"
                android:id="@+id/listHistory"
                android:layout_row="10"
                android:background="#fde799"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="50dp"
                android:paddingLeft="50dp" />

            <ovejero_nicolas.epiandroid.NonScrollListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/historyList"
                android:layout_row="12"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:dividerHeight="2.0sp"
                android:divider="#0505b7"
                android:headerDividersEnabled="false">
            </ovejero_nicolas.epiandroid.NonScrollListView>

        </GridLayout>
    </ScrollView>
</LinearLayout>
